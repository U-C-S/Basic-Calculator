<Window x:Class="Basic_Calculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Calculator" Height="360" Width="235">
    <Grid Margin="1,1,1,1">
        <Button Content="1" HorizontalAlignment="Left" Margin="10,179,0,0" VerticalAlignment="Top" Width="65" Height="30" Click="Click_1" Background="#FF96B6D4"/>
        <Button Content="2" HorizontalAlignment="Left" VerticalAlignment="Top" Width="65" Margin="80,179,0,0" Height="30" Click="Click_2" Background="#FF96B6D4"/>
        <Button Content="3" HorizontalAlignment="Left" VerticalAlignment="Top" Width="65" Margin="150,179,0,0" Height="30" Click="Click_3" Background="#FF96B6D4"/>
        <Button Content="4" HorizontalAlignment="Left" VerticalAlignment="Top" Width="65" Margin="10,214,0,0" Height="30" Click="Click_4" Background="#FF96B6D4"/>
        <Button Content="5" HorizontalAlignment="Left" Margin="80,214,0,0" VerticalAlignment="Top" Width="65" Height="30" Click="Click_5" Background="#FF96B6D4"/>
        <Button Content="6" HorizontalAlignment="Left" Margin="150,214,0,0" VerticalAlignment="Top" Width="65" Height="30" Click="Click_6" Background="#FF96B6D4"/>
        <Button Content="7" HorizontalAlignment="Left" Margin="10,249,0,0" VerticalAlignment="Top" Width="65" Height="30" Click="Click_7" Background="#FF96B6D4"/>
        <Button Content="8" HorizontalAlignment="Left" VerticalAlignment="Top" Width="65" Margin="80,249,0,0" Height="30" Click="Click_8" Background="#FF96B6D4"/>
        <Button Content="9" HorizontalAlignment="Left" VerticalAlignment="Top" Width="65" Margin="150,249,0,0" Height="30" Click="Click_9" Background="#FF96B6D4"/>
        <Button Content="0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="65" Height="30" Margin="80,284,0,0" Click="Click_0" Background="#FF96B6D4"/>
        <Button Content="-" HorizontalAlignment="Left" Margin="10,134,0,0" VerticalAlignment="Top" Width="65" Height="30" Background="#FFC0DA80" Click="Subraction"/>
        <Button Content="+" HorizontalAlignment="Left" Margin="80,134,0,0" VerticalAlignment="Top" Width="65" Height="30" Background="#FFC0DA80" Click="Addition"/>
        <Button Content="Clear" HorizontalAlignment="Left" Margin="150,134,0,0" VerticalAlignment="Top" Width="65" Height="30" Click="Clear_Click"/>
        <Button Content="/" HorizontalAlignment="Left" VerticalAlignment="Top" Width="65" Margin="10,99,0,0" Height="30" Click="divison" Background="#FFC0DA80"/>
        <Button Content="x" HorizontalAlignment="Left" VerticalAlignment="Top" Width="65" Height="30" Margin="80,99,0,0" Background="#FFC0DA80" Click="Multiply"/>
        <Button Content="back" HorizontalAlignment="Left" VerticalAlignment="Top" Width="65" Height="30" Margin="150,99,0,0"/>
        <Button Content="." HorizontalAlignment="Left" VerticalAlignment="Top" Width="65" Height="30" Margin="10,284,0,0" Click="Click_dot"/>
        <Button Content="=" HorizontalAlignment="Left" VerticalAlignment="Top" Width="65" Height="30" Margin="150,284,0,0" Background="#ff1439" Foreground="White" Click="Equal"/>
        <TextBox Name="textboxx" IsReadOnly="True" HorizontalAlignment="Left" Height="78" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="205" Margin="10,10,0,0" Background="White" FontSize="20" FontStyle="Italic" BorderThickness="3" BorderBrush="Black"/>
    </Grid>
</Window>
